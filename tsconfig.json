{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["vite/client", "svelte"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "stripInternal": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts",
    "global.d.ts",
    "./src/**/*.svelte",
    "src/main.test.tsx",
  ],
  "exclude": ["node_modules", "./src/tests", "./**/*.test.ts"],
  "typedocOptions": {
    "entryPoints": ["src/main.ts"],
    "out": "docs",
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeVersion": true,
    "visibilityFilters": {
      "external": true,
      "inherited": true
    }
  }
}
